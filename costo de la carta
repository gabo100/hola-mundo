
#include "stdafx.h"
#include<iostream>
#include "conio.h"
using namespace std;

void main()
{
	int peso, costoenvio;
	cout<<"ingrese el peso de la carta:";
	cin>>peso;
	if(peso<50)
	cout<<"valor invalido";
	else 
	{
		if(peso<50)
			costoenvio=1.5*peso;
		else 
			if(peso<100)
				costoenvio=4*peso;
			else 
				if(peso<200)
					costoenvio=6*peso;
				else
					if(peso<350)
						costoenvio=10.5*peso;
					else 
						if(peso<500)
							costoenvio= 15*peso;
						else 
							cout<<"no se puedee enviar como carta:";
		if (peso<500){
		cout<<"el costo de envio es de:";
		cout<<costoenvio;}  
	}
    getch();
}
			
